<div class="col-md-8">
  <p class="alert"><%= alert %></p>
  <div class="card card-info">
    <div class="card-header">
      <h2 class="card-title"><%= params[:action].titleize %> Hotel</h2>
    </div>

    <div class='card-body'>
    <%= form_with(model: hotel) do |form| %>

        <div class="form-group">
          <%= form.label :name, style: "display: block" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter name"  %>
        </div>

        <div class="form-group">
          <%= form.label :location, style: "display: block" %>
          <%= form.text_field :location, class: "form-control", placeholder: "Enter location"   %>
        </div>

        <div class="form-group">
          <%= form.label :owner, style: "display: block" %>
          <%= form.text_field :owner, class: "form-control", placeholder: "Enter owner name"  %>
        </div>

        <div class="form-group">
          <%= form.submit "Submit", class: "btn btn-info" %>
        </div>
    <% end %>
    </div>
   </div>
  </div>
