<div class="col-md-8">
  <p class="alert"><%= alert %></p>
  <div class="card card-info">
    <div class="card-header">
      <h2 class="card-title"><%= params[:action].titleize %> Room</h2>
    </div>
<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='card-body'>
  <div class="form-group">
    <%= form.label :hotel_id, style: "display: block" %>
    <%= form.collection_select :hotel_id, Hotel.order(:name),:id,:name, {selected: @hotel.id}, {class: "custom-select"} %>
  </div>

  <div class="form-group">
    <%= form.label :room_no, style: "display: block" %>
    <%= form.text_field :room_no, class: "form-control", placeholder: "Enter room number" %>
  </div>

  <div class="form-group">
    <%= form.label "Room Type", style: "display: block" %>
    <%= form.collection_select :room_category_id, RoomCategory.order(:name),:id,:name, {prompt: "Select Room Type", selected: @room_category_name}, {class: "custom-select"} %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-info" %>
  </div>
  </div>
<% end %>
</div>
</div>
